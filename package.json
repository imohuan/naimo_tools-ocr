{
  "name": "ocr-plugin",
  "version": "1.0.0",
  "description": "智能截图识别文字并翻译，支持多种语言互译",
  "type": "module",
  "scripts": {
    "init": "pnpm i && pnpm run add-electron-types && pnpm run dev",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "add-electron-types": "$env:ELECTRON_SKIP_DOWNLOAD=1; pnpm install electron --save-dev",
    "deploy": "node scripts/deploy-to-build.js"
  },
  "keywords": [
    "naimo",
    "plugin",
    "electron",
    "ocr",
    "translation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naimo-tools/ocr-plugin.git"
  },
  "author": "Naimo Tools",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.20",
    "electron": "^38.2.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  }
}